{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "shadowlearn",
  "version": "0.1.0",
  "identifier": "com.syloh.shadowlearn",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "ShadowLearn — Dashboard",
        "url": "index.html",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "center": true,
        "visible": true,
        "skipTaskbar": false,
        "shadow": true
      },
      {
        "label": "chat",
        "title": "ShadowLearn — Chat",
        "url": "chat.html",
        "width": 420,
        "height": 560,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "shadow": true,
        "center": false,
        "dragDropEnabled": false,
        "visible": true,
        "skipTaskbar": true,
        "visibleOnAllWorkspaces": true,
        "acceptFirstMouse": true,
        "tabbingIdentifier": "shadowlearn"
      },
      {
        "label": "context",
        "title": "ShadowLearn — Context",
        "url": "context.html",
        "width": 300,
        "height": 420,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "shadow": true,
        "center": false,
        "dragDropEnabled": false,
        "visible": true,
        "skipTaskbar": true,
        "visibleOnAllWorkspaces": true,
        "acceptFirstMouse": true,
        "tabbingIdentifier": "shadowlearn"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-window",
          "windows": ["main"],
          "permissions": [
            "core:window:allow-hide",
            "core:window:allow-show",
            "core:window:allow-set-focus",
            "core:window:allow-minimize",
            "core:window:allow-close",
            "core:event:allow-listen",
            "core:event:default"
          ]
        },
        {
          "identifier": "draggable-window",
          "windows": ["chat", "context"],
          "permissions": [
            "core:window:allow-start-dragging",
            "core:window:allow-hide",
            "core:window:allow-show",
            "core:window:allow-set-focus",
            "core:window:allow-minimize",
            "core:event:allow-listen",
            "core:event:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
